# Database Configuration
# Railway will automatically provide DATABASE_URL when you add PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/predictgram

# Security & Session
SECRET_KEY=your-super-secret-key-change-this-in-production
SESSION_COOKIE_SAMESITE=None
SESSION_COOKIE_SECURE=1

# CORS Configuration
# For production, set your frontend URL (e.g., https://yourapp.vercel.app)
# Multiple origins: https://app1.com,https://app2.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# API Keys
CG_API_KEY=your-coingecko-api-key
TWELVE_API_KEY=your-twelve-data-api-key
DUNE_API_KEY=your-dune-analytics-api-key

# Redis (Optional - Railway can provide this)
# Leave empty if not using Redis, will fallback to filesystem sessions
REDIS_URL=
REDIS_DISABLE=0

# Debug Mode (set to 0 in production)
FLASK_DEBUG=0

# Port (Railway will set this automatically)
PORT=8080
